                                        }
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="flex flex-col">
                                            <span class="text-slate-900 font-semibold">@transaction.Description</span>
                                            <span class="text-slate-500 text-sm">@transaction.ProcessHandlers.Count lines</span>
                                        </div>
                                    </td>
                                    <td class="py-4 px-6">
                                        @if (!string.IsNullOrEmpty(transaction.ReferenceNo))
                                        {
                                            <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-lg text-sm font-mono shadow-sm">
                                                @transaction.ReferenceNo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-slate-400 text-sm">â€”</span>
                                        }
                                    </td>
                                    <td class="py-4 px-6 text-right">
                                        <div class="flex flex-col">
                                            <span class="text-slate-900 font-bold text-lg">R @transaction.ProcessHandlers.Sum(tl => tl.Debit).ToString("N2")</span>
                                            <span class="text-slate-500 text-sm">Total</span>
                                        </div>
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="flex flex-wrap gap-1 justify-center">
                                            @foreach (var line in transaction.ProcessHandlers.Take(3))
                                            {
                                                <span class="px-2 py-1 bg-slate-100 text-slate-700 rounded text-xs shadow-sm">
                                                    @(line.Qw8Rt5Entity?.AccountName ?? "Unknown")
                                                </span>
                                            }
                                            @if (transaction.ProcessHandlers.Count > 3)
                                            {
                                                <span class="px-2 py-1 bg-slate-200 text-slate-600 rounded text-xs shadow-sm">
                                                    +@(transaction.ProcessHandlers.Count - 3)
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td class="py-4 px-6">
