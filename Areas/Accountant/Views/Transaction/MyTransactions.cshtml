                        <p class="text-slate-900 text-2xl font-bold">@Model.Count</p>
                    </div>
                </div>
            </div>

            <div class="bg-gradient-to-br from-white to-green-50 rounded-xl shadow-sm border border-green-100 p-6 transform hover:scale-105 transition-all duration-300">
