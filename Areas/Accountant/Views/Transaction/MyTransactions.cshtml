                        <option value="100-500">R100 - R500</option>
                        <option value="500-1000">R500 - R1,000</option>
                        <option value="1000-5000">R1,000 - R5,000</option>
                        <option value="5000+">R5,000+</option>
                    </select>
                </div>
            </div>

            <!-- Filter Results Info -->
            <div class="mt-4 flex items-center justify-between">
                <div id="filterResults" class="text-sm text-slate-600 bg-slate-100 px-3 py-1 rounded-full">
                    Showing all @Model.Count transactions
