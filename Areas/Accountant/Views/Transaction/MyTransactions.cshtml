                        <i class="fas fa-calendar-week text-white text-lg"></i>
                    </div>
                    <div>
                        <p class="text-slate-600 text-sm font-medium">This Week</p>
                        <p class="text-slate-900 text-2xl font-bold">@Model.Count(t => t.TransactionDate >= DateTime.Now.AddDays(-7))</p>
                    </div>
                </div>
            </div>
        </div>

