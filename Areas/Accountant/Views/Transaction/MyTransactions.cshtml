                        <i class="fas fa-coins text-white text-lg"></i>
                    </div>
                    <div>
                        <p class="text-slate-600 text-sm font-medium">Total Value</p>
                        <p class="text-slate-900 text-2xl font-bold">R @Model.SelectMany(t => t.ProcessHandlers).Sum(tl => tl.Debit).ToString("N2")</p>
                    </div>
                </div>
            </div>

            <div class="bg-gradient-to-br from-white to-orange-50 rounded-xl shadow-sm border border-orange-100 p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
