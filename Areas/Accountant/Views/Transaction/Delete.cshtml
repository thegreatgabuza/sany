@model Pz7Vm5Protocol

@{
    ViewData["Title"] = "Delete Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-8xl mx-auto py-6 px-4">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="bg-gradient-to-r from-red-600 via-red-700 to-red-800 px-8 py-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div class="flex items-center space-x-4">
                        <a href="@Url.Action("Details", "Transaction", new { area = "Accountant", id = Model.TransactionId })"
                            class="w-10 h-10 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-105">
                            <i class="fas fa-arrow-left text-white"></i>
                        </a>
                        <div class="flex items-center space-x-4">
                            <div class="w-20 h-20 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-white/30">
                                <i class="fas fa-trash-alt text-white text-3xl"></i>
                            </div>
                            <div>
                                <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">Delete Transaction</h1>
                                <div class="flex flex-wrap items-center gap-3">
                                    <span class="font-mono text-sm text-white/90 bg-white/10 px-3 py-1 rounded-lg backdrop-blur-sm">#@Model.TransactionId</span>
                                    <span class="text-white/90 text-sm">@Model.Description</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center flex-wrap gap-2">
                        <a href="@Url.Action("Details", "Transaction", new { area = "Accountant", id = Model.TransactionId })"
                            class="px-5 py-2.5 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white rounded-lg transition-all duration-200 font-medium flex items-center space-x-2 hover:scale-105 border border-white/30">
                            <i class="fas fa-eye"></i>
                            <span>View Details</span>
                        </a>
                        <a href="@Url.Action("Index", "Transaction", new { area = "Accountant" })"
                            class="px-5 py-2.5 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white rounded-lg transition-all duration-200 font-medium flex items-center space-x-2 hover:scale-105 border border-white/30">
                            <i class="fas fa-list"></i>
                            <span>Back to List</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto">
        <!-- Warning Alert -->
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 mb-6 shadow-sm">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-red-500 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-red-800 mb-2">
                        This action cannot be undone!
                    </h3>
                    <p class="text-red-700 mb-3">
                        Deleting this transaction will permanently remove all associated journal entries from the system.
                    </p>
                    <ul class="text-sm text-red-700 space-y-1">
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-red-500 mr-2 mt-1"></i>
                            <span>You can only delete transactions you entered yourself</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-red-500 mr-2 mt-1"></i>
                            <span>You can only delete transactions from the same day</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-info-circle text-red-500 mr-2 mt-1"></i>
                            <span>Consider creating a correcting entry instead if this transaction has already been posted</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Transaction Information Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
                <h2 class="text-xl font-bold text-slate-800 flex items-center">
                    <i class="fas fa-file-invoice text-cascadeBlue mr-3"></i>
                    Transaction Information
                </h2>
            </div>
            <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Transaction ID</dt>
                        <dd class="text-lg font-mono text-slate-800 bg-slate-50 px-3 py-1 rounded-lg inline-block">#@Model.TransactionId</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Transaction Date</dt>
                        <dd class="text-lg font-bold text-slate-900">@Model.TransactionDate.ToString("dd MMMM yyyy")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Reference Number</dt>
                        <dd class="text-lg text-slate-800">@(Model.ReferenceNo ?? "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Entered By</dt>
                        <dd class="text-lg text-slate-800">@(Model.EnteredByUser?.UserName ?? "Unknown")</dd>
                    </div>
                    <div class="md:col-span-2">
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Description</dt>
                        <dd class="text-lg text-slate-900 font-medium">@Model.Description</dd>
                    </div>
                    <div class="md:col-span-2">
                        <dt class="text-sm font-semibold text-slate-600 uppercase tracking-wide mb-1">Entered At</dt>
                        <dd class="text-lg text-slate-800">@Model.EnteredAt.ToString("dd MMMM yyyy 'at' HH:mm")</dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Journal Entries Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
                <h2 class="text-xl font-bold text-slate-800 flex items-center">
                    <i class="fas fa-list-alt text-cascadeBlue mr-3"></i>
                    Journal Entries to be Deleted
                </h2>
            </div>
            <div class="p-6">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-slate-200">
                                <th class="text-left py-3 px-4 text-slate-700 font-medium">Account</th>
                                <th class="text-left py-3 px-4 text-slate-700 font-medium">Account Type</th>
                                <th class="text-right py-3 px-4 text-slate-700 font-medium">Debit</th>
                                <th class="text-right py-3 px-4 text-slate-700 font-medium">Credit</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                            @foreach (var line in Model.ProcessHandlers)
                            {
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="py-3 px-4">
                                        <p class="text-slate-900 font-medium">@line.Qw8Rt5Entity?.AccountName</p>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(line.Qw8Rt5Entity?.Mx9Qw7Type switch {
                                            Mx9Qw7Type.Asset => "bg-green-100 text-green-800",
                                            Mx9Qw7Type.Liability => "bg-red-100 text-red-800",
                                            Mx9Qw7Type.Equity => "bg-blue-100 text-blue-800",
                                            Mx9Qw7Type.Revenue => "bg-purple-100 text-purple-800",
                                            Mx9Qw7Type.Expense => "bg-orange-100 text-orange-800",
                                            _ => "bg-slate-100 text-slate-800"
                                        })">
                                            @line.Qw8Rt5Entity?.Mx9Qw7Type
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 text-right">
                                        @if (line.Debit > 0)
                                        {
                                            <span class="text-green-600 font-medium">R@line.Debit.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-slate-400">-</span>
                                        }
                                    </td>
                                    <td class="py-3 px-4 text-right">
                                        @if (line.Credit > 0)
                                        {
                                            <span class="text-red-600 font-medium">R@line.Credit.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-slate-400">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-t-2 border-slate-300 font-bold bg-slate-50">
                                <td colspan="2" class="py-3 px-4 text-slate-900">TOTALS</td>
                                <td class="py-3 px-4 text-right text-green-600">
                                    R@Model.ProcessHandlers.Sum(tl => tl.Debit).ToString("N2")
                                </td>
                                <td class="py-3 px-4 text-right text-red-600">
                                    R@Model.ProcessHandlers.Sum(tl => tl.Credit).ToString("N2")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Delete Form -->
        <div class="bg-white rounded-2xl shadow-lg border-2 border-red-300 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-red-600 to-red-700 px-6 py-4 border-b border-red-800">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-exclamation-triangle mr-3"></i>
                    Confirm Deletion
                </h2>
            </div>
            <div class="p-6">
                <form method="post" action="@Url.Action("Delete", "Transaction", new { area = "Accountant", id = Model.TransactionId })">
                    @Html.AntiForgeryToken()

                    <!-- Confirmation Checkbox -->
                    <div class="mb-6">
                        <div class="flex items-start p-4 bg-red-50 rounded-lg border-2 border-red-300 hover:border-red-500 transition-colors">
                            <input class="mt-1 mr-4 w-5 h-5 text-red-600 border-red-300 rounded focus:ring-red-500 focus:ring-2" 
                                   type="checkbox" 
                                   id="confirmDelete" 
                                   required>
                            <label class="flex-1 text-red-900 cursor-pointer" for="confirmDelete">
                                <span class="font-bold text-lg">
                                    I understand that deleting Transaction #@Model.TransactionId is permanent and cannot be undone.
                                </span>
                                <span class="block text-sm text-red-700 mt-2">
                                    By checking this box, I confirm that I want to permanently delete this transaction and all its journal entries.
                                </span>
                            </label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-end">
                        <a href="@Url.Action("Details", "Transaction", new { area = "Accountant", id = Model.TransactionId })" 
                            class="px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg transition-all duration-200 font-medium flex items-center justify-center space-x-2 hover:scale-105 shadow-md">
                            <i class="fas fa-times-circle"></i>
                            <span>Cancel</span>
                        </a>
                        <button type="submit" 
                                class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-all duration-200 font-medium flex items-center justify-center space-x-2 hover:scale-105 shadow-md disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100" 
                                id="deleteBtn" 
                                disabled>
                            <i class="fas fa-trash"></i>
                            <span>Permanently Delete Transaction</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Before You Delete Info Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="bg-gradient-to-r from-amber-50 to-yellow-50 px-6 py-4 border-b border-amber-200">
                <h2 class="text-xl font-bold text-amber-800 flex items-center">
                    <i class="fas fa-lightbulb text-amber-600 mr-3"></i>
                    Before You Delete
                </h2>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-slate-700">
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                        <span>Make sure you have a backup of this transaction's data</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mr-3 mt-1"></i>
                        <span>Consider creating a <strong>correcting entry</strong> instead if this transaction has already been posted</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-red-500 mr-3 mt-1"></i>
                        <span>Deleted transactions cannot be recovered</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-link text-slate-500 mr-3 mt-1"></i>
                        <span>All associated journal entries will also be deleted</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const confirmCheckbox = document.getElementById('confirmDelete');
        const deleteButton = document.getElementById('deleteBtn');
        
        if (confirmCheckbox && deleteButton) {
            confirmCheckbox.addEventListener('change', function() {
                deleteButton.disabled = !this.checked;
            });
        }
    });
</script>
