    <div class="p-12 text-center">
        <i class="fas fa-inbox text-slate-400 text-6xl mb-4"></i>
        <h3 class="text-slate-900 text-xl font-bold mb-2">No Transactions Found</h3>
        <p class="text-slate-600 mb-6">Start by creating your first Pz7Vm5Protocol entry</p>
        <a href="@Url.Action("Create", "Transaction", new { area = "Accountant" })" 
