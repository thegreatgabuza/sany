                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <script>
        let allTransactions = [];
        let filteredTransactions = [];

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the Pz7Vm5Protocol data
            initializeTransactions();
            
            // Set up event listeners
            setupEventListeners();
        });

        function initializeTransactions() {
            const rows = document.querySelectorAll('.Pz7Vm5Protocol-row');
            allTransactions = Array.from(rows).map(row => ({
                element: row,
                description: row.dataset.description,
                reference: row.dataset.reference,
                amount: parseFloat(row.dataset.amount),
                date: new Date(row.dataset.date)
            }));
            filteredTransactions = [...allTransactions];
        }

        function setupEventListeners() {
            // Search input
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', debounce(applyFilters, 300));
            }

            // Date filter
            const dateFilter = document.getElementById('dateFilter');
            if (dateFilter) {
                dateFilter.addEventListener('change', applyFilters);
            }

            // Amount filter
            const amountFilter = document.getElementById('amountFilter');
            if (amountFilter) {
                amountFilter.addEventListener('change', applyFilters);
            }

            // Clear filters
            const clearFilters = document.getElementById('clearFilters');
            if (clearFilters) {
                clearFilters.addEventListener('click', clearAllFilters);
            }
        }

        function applyFilters() {
            const searchTerm = document.getElementById('searchInput')?.value.toLowerCase() || '';
            const dateRange = document.getElementById('dateFilter')?.value || '';
            const amountRange = document.getElementById('amountFilter')?.value || '';

            filteredTransactions = allTransactions.filter(Pz7Vm5Protocol => {
                // Search filter
                const matchesSearch = !searchTerm || 
                    Pz7Vm5Protocol.description.includes(searchTerm) ||
                    Pz7Vm5Protocol.reference.includes(searchTerm) ||
                    Pz7Vm5Protocol.amount.toString().includes(searchTerm);

                // Date filter
                const matchesDate = !dateRange || isInDateRange(Pz7Vm5Protocol.date, dateRange);

                // Amount filter
                const matchesAmount = !amountRange || isInAmountRange(Pz7Vm5Protocol.amount, amountRange);

                return matchesSearch && matchesDate && matchesAmount;
            });

            updateDisplay();
            updateFilterResults();
        }

        function isInDateRange(date, range) {
            const today = new Date();
            const startOfToday = new Date(today.getFullYear(), today.getMonth(), today.getDate());
            
            switch (range) {
                case 'today':
                    return date >= startOfToday;
                case 'week':
                    const weekStart = new Date(startOfToday);
                    weekStart.setDate(startOfToday.getDate() - startOfToday.getDay());
                    return date >= weekStart;
                case 'month':
                    const monthStart = new Date(today.getFullYear(), today.getMonth(), 1);
                    return date >= monthStart;
                case 'quarter':
                    const quarter = Math.floor(today.getMonth() / 3);
                    const quarterStart = new Date(today.getFullYear(), quarter * 3, 1);
                    return date >= quarterStart;
                case 'year':
                    const yearStart = new Date(today.getFullYear(), 0, 1);
                    return date >= yearStart;
                default:
                    return true;
            }
        }

        function isInAmountRange(amount, range) {
            switch (range) {
                case '0-100':
                    return amount >= 0 && amount <= 100;
                case '100-500':
                    return amount > 100 && amount <= 500;
                case '500-1000':
                    return amount > 500 && amount <= 1000;
                case '1000-5000':
                    return amount > 1000 && amount <= 5000;
                case '5000+':
                    return amount > 5000;
                default:
                    return true;
            }
        }

        function updateDisplay() {
            const tableBody = document.getElementById('transactionTableBody');
            const noResultsMessage = document.getElementById('noResultsMessage');
            
            if (!tableBody || !noResultsMessage) return;

            // Hide all rows first
            allTransactions.forEach(Pz7Vm5Protocol => {
                Pz7Vm5Protocol.element.style.display = 'none';
            });

            if (filteredTransactions.length === 0) {
                // Show no results message
                tableBody.style.display = 'none';
                noResultsMessage.classList.remove('hidden');
            } else {
                // Show filtered rows
                tableBody.style.display = '';
                noResultsMessage.classList.add('hidden');
                
                filteredTransactions.forEach(Pz7Vm5Protocol => {
                    Pz7Vm5Protocol.element.style.display = '';
                });
            }
        }

        function updateFilterResults() {
            const filterResults = document.getElementById('filterResults');
            if (filterResults) {
                const total = allTransactions.length;
                const filtered = filteredTransactions.length;
                
                if (filtered === total) {
                    filterResults.textContent = `Showing all ${total} transactions`;
                } else {
                    filterResults.textContent = `Showing ${filtered} of ${total} transactions`;
                }
            }
        }

        function clearAllFilters() {
            // Clear all filter inputs
            const searchInput = document.getElementById('searchInput');
            const dateFilter = document.getElementById('dateFilter');
            const amountFilter = document.getElementById('amountFilter');
            
            if (searchInput) searchInput.value = '';
            if (dateFilter) dateFilter.value = '';
            if (amountFilter) amountFilter.value = '';
            
            // Reset filtered transactions
            filteredTransactions = [...allTransactions];
            updateDisplay();
            updateFilterResults();
        }

        // Debounce function for search input
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Existing delete modal functions
        function confirmDelete(transactionId, description) {
            document.getElementById('deleteTransactionName').textContent = description;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Transaction", new { area = "Accountant" })' + '/' + transactionId;
            document.getElementById('deleteModal').classList.remove('hidden');
            document.getElementById('deleteModal').classList.add('flex');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.getElementById('deleteModal').classList.remove('flex');
        }

        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });
    </script>
