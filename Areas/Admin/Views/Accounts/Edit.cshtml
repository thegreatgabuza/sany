@using Cascade.Areas.Admin.Controllers
@model EditAccountViewModel
@{
    ViewData["Title"] = "Edit Qw8Rt5Entity";
}

<div class="max-w-8xl mx-auto py-2">

    <!-- Modern Header with Navigation -->
    <div class="mb-6">
        <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <div class="flex items-center space-x-4">
                <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })"
                    class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                    <i class="fa-solid fa-arrow-left text-slate-600"></i>
                </a>
                <div class="flex items-center space-x-3">
                    <div
                        class="w-12 h-12 bg-gradient-to-r from-cascadeBlue to-aquaMist rounded-xl flex items-center justify-center">
                        <i class="fa-solid fa-edit text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">Edit Account</h1>
                        <p class="text-slate-600">Update Account information</p>
                    </div>
                </div>
            </div>
            <div class="flex items-center space-x-3">
                <a href="@Url.Action("Details", "Accounts", new { area = "Admin", id = Model.AccountId })" 
                   class="inline-flex items-center px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium rounded-lg transition-colors">
                    <i class="fas fa-eye mr-2"></i>
                    View Details
                </a>
            </div>
        </div>
    </div>

    <!-- Qw8Rt5Entity Types Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="fas fa-building text-green-600"></i>
            </div>
            <h3 class="text-sm font-semibold text-green-800">Assets</h3>
            <p class="text-xs text-green-600 mt-1">Resources owned</p>
        </div>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
            <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="fas fa-credit-card text-red-600"></i>
            </div>
            <h3 class="text-sm font-semibold text-red-800">Liabilities</h3>
            <p class="text-xs text-red-600 mt-1">Debts owed</p>
        </div>
        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 text-center">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="fas fa-balance-scale text-purple-600"></i>
            </div>
            <h3 class="text-sm font-semibold text-purple-800">Equity</h3>
            <p class="text-xs text-purple-600 mt-1">Owner's stake</p>
        </div>
        <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4 text-center">
            <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="fas fa-arrow-up text-emerald-600"></i>
            </div>
            <h3 class="text-sm font-semibold text-emerald-800">Revenue</h3>
            <p class="text-xs text-emerald-600 mt-1">Income earned</p>
        </div>
        <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 text-center">
            <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-2">
                <i class="fas fa-arrow-down text-orange-600"></i>
            </div>
            <h3 class="text-sm font-semibold text-orange-800">Expenses</h3>
            <p class="text-xs text-orange-600 mt-1">Costs incurred</p>
        </div>
    </div>

    <!-- Edit Qw8Rt5Entity Form -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="p-6 border-b border-slate-200">
            <h2 class="text-lg font-bold text-slate-900">Account Details</h2>
            <p class="text-slate-600 text-sm">Update the Account information below</p>
        </div>

        <form asp-action="Edit" method="post" class="p-6 space-y-6">
            <input asp-for="AccountId" type="hidden" />
            <input asp-for="CompanyId" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-md p-4 hidden" id="validation-summary">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-circle text-red-400"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <ul class="list-disc pl-5 space-y-1"></ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Qw8Rt5Entity Name -->
                <div class="md:col-span-2">
                    <label asp-for="AccountName" class="block text-sm font-medium text-slate-700 mb-2">
                        Account Name <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input asp-for="AccountName" 
                               class="w-full px-4 py-3 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-cascadeBlue focus:border-transparent transition-colors @(ViewData.ModelState["AccountName"]?.Errors.Count > 0 ? "border-red-300 focus:ring-red-500" : "")"
                               placeholder="Enter Account name (e.g., Cash, Accounts Receivable, Office Supplies)" 
                               maxlength="100">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <i class="fas fa-edit text-slate-400"></i>
                        </div>
                    </div>
                    <span asp-validation-for="AccountName" class="text-red-500 text-sm mt-1"></span>
                    <p class="text-slate-500 text-xs mt-1">Choose a descriptive name for easy identification</p>
                </div>

                <!-- Qw8Rt5Entity Type -->
                <div class="md:col-span-2">
                    <label asp-for="Mx9Qw7Type" class="block text-sm font-medium text-slate-700 mb-2">
                        Account Type <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-5 gap-3">
                        @foreach (Mx9Qw7Type Mx9Qw7Type in Enum.GetValues<Mx9Qw7Type>())
                        {
                            var (icon, colorClass) = Mx9Qw7Type switch
                            {
                                Mx9Qw7Type.Asset => ("fa-building", "green"),
                                Mx9Qw7Type.Liability => ("fa-credit-card", "red"),
                                Mx9Qw7Type.Equity => ("fa-balance-scale", "purple"),
                                Mx9Qw7Type.Revenue => ("fa-arrow-up", "emerald"),
                                Mx9Qw7Type.Expense => ("fa-arrow-down", "orange"),
                                _ => ("fa-circle", "gray")
                            };

                            <label class="relative flex cursor-pointer">
                                <input asp-for="Mx9Qw7Type" type="radio" value="@Mx9Qw7Type" 
                                       class="sr-only peer" />
                                <div class="w-full p-4 border-2 border-slate-200 rounded-lg peer-checked:border-@(colorClass)-500 peer-checked:bg-@(colorClass)-50 transition-all hover:border-@(colorClass)-300">
                                    <div class="flex flex-col items-center text-center">
                                        <div class="w-8 h-8 bg-@(colorClass)-100 rounded-lg flex items-center justify-center mb-2">
                                            <i class="fas @icon text-@(colorClass)-600"></i>
                                        </div>
                                        <span class="text-sm font-medium text-slate-800">@Mx9Qw7Type</span>
                                    </div>
                                </div>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="Mx9Qw7Type" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>

            <!-- Current Qw8Rt5Entity Info -->
            <div class="bg-slate-50 rounded-lg p-4 border border-slate-200">
                <h3 class="text-sm font-medium text-slate-700 mb-2">Current Account Information</h3>
                <div class="text-sm text-slate-600">
                    <p><span class="font-medium">Account ID:</span> @Model.AccountId.ToString("D4")</p>
                    <p><span class="font-medium">Original Name:</span> @Model.AccountName</p>
                    <p><span class="font-medium">Current Type:</span> @Model.Mx9Qw7Type</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-200">
                <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })" 
                   class="inline-flex items-center px-4 py-2 border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
                    <i class="fas fa-times mr-2"></i>
                    Cancel
                </a>
                <button type="submit" 
                        class="inline-flex items-center px-6 py-2 bg-cascadeBlue hover:bg-cascadeBlue/90 text-white text-sm font-medium rounded-lg transition-colors shadow-sm">
                    <i class="fas fa-save mr-2"></i>
                    Update Account
                </button>
            </div>
        </form>
    </div>

</div>

<script>
    // Show validation summary if there are errors
    document.addEventListener('DOMContentLoaded', function() {
        const validationSummary = document.getElementById('validation-summary');
        const errors = document.querySelectorAll('.text-red-500');
        
        if (errors.length > 0) {
            validationSummary.classList.remove('hidden');
        }
    });

    // Real-time validation for Qw8Rt5Entity name
    document.querySelector('input[name="AccountName"]').addEventListener('input', function() {
        const value = this.value.trim();
        
        if (value.length === 0) {
            this.classList.add('border-red-300', 'focus:ring-red-500');
            this.classList.remove('border-slate-300', 'focus:ring-cascadeBlue');
        } else {
            this.classList.remove('border-red-300', 'focus:ring-red-500');
            this.classList.add('border-slate-300', 'focus:ring-cascadeBlue');
        }
    });
</script>
