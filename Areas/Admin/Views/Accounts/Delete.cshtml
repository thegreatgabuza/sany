@model Qw8Rt5Entity
@{
    ViewData["Title"] = "Delete Account";
}

<div class="max-w-8xl mx-auto py-2">

    <!-- Modern Header with Navigation -->
    <div class="mb-6">
        <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <div class="flex items-center space-x-4">
                <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })"
                    class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                    <i class="fa-solid fa-arrow-left text-slate-600"></i>
                </a>
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                        <i class="fa-solid fa-trash text-red-600 text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">Delete Account</h1>
                        <p class="text-slate-600">Permanently remove this Account from your chart of accounts</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Messages -->
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-circle text-red-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">@TempData["Error"]</p>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.HasTransactions)
    {
        <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-yellow-800">Cannot Delete Account</h3>
                    <div class="mt-2 text-sm text-yellow-700">
                        <p>This Account has @ViewBag.TransactionCount associated transactions and cannot be deleted. 
                           You must remove all transactions from this Account before deletion.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-red-400"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Warning: This action cannot be undone</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p>Once you delete this Account, all associated data will be permanently removed from your chart of accounts. 
                           Please make sure this is what you want to do.</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Qw8Rt5Entity Information -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm mb-6">
        <div class="p-6 border-b border-slate-200">
            <h2 class="text-lg font-bold text-slate-900">Account to be Deleted</h2>
        </div>
        <div class="p-6">
            <div class="flex items-center space-x-4">
                <div class="w-16 h-16 rounded-xl flex items-center justify-center
                            @(Model.Mx9Qw7Type == Mx9Qw7Type.Asset ? "bg-green-100" :
                              Model.Mx9Qw7Type == Mx9Qw7Type.Liability ? "bg-red-100" :
                              Model.Mx9Qw7Type == Mx9Qw7Type.Equity ? "bg-purple-100" :
                              Model.Mx9Qw7Type == Mx9Qw7Type.Revenue ? "bg-emerald-100" : "bg-orange-100")">
                    <i class="fas @(Model.Mx9Qw7Type == Mx9Qw7Type.Asset ? "fa-building text-green-600" :
                                   Model.Mx9Qw7Type == Mx9Qw7Type.Liability ? "fa-credit-card text-red-600" :
                                   Model.Mx9Qw7Type == Mx9Qw7Type.Equity ? "fa-balance-scale text-purple-600" :
                                   Model.Mx9Qw7Type == Mx9Qw7Type.Revenue ? "fa-arrow-up text-emerald-600" : "fa-arrow-down text-orange-600") text-2xl"></i>
                </div>
                <div class="flex-1">
                    <h3 class="text-xl font-bold text-slate-900">@Model.AccountName</h3>
                    <div class="flex items-center space-x-4 mt-2">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                                     @(Model.Mx9Qw7Type == Mx9Qw7Type.Asset ? "bg-green-100 text-green-800" :
                                       Model.Mx9Qw7Type == Mx9Qw7Type.Liability ? "bg-red-100 text-red-800" :
                                       Model.Mx9Qw7Type == Mx9Qw7Type.Equity ? "bg-purple-100 text-purple-800" :
                                       Model.Mx9Qw7Type == Mx9Qw7Type.Revenue ? "bg-emerald-100 text-emerald-800" : "bg-orange-100 text-orange-800")">
                            @Model.Mx9Qw7Type
                        </span>
                        <span class="text-sm text-slate-600">ID: @Model.AccountId.ToString("D4")</span>
                        <span class="text-sm text-slate-600">Hx7Tz3Data: @Model.Hx7Tz3Data?.CompanyName</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Qw8Rt5Entity Statistics -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm mb-6">
        <div class="p-6 border-b border-slate-200">
            <h2 class="text-lg font-bold text-slate-900">Account Impact Analysis</h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="text-center p-4 bg-slate-50 rounded-lg">
                    <div class="text-2xl font-bold text-slate-900">@ViewBag.TransactionCount</div>
                    <div class="text-sm text-slate-600">Associated Transactions</div>
                </div>
                <div class="text-center p-4 bg-slate-50 rounded-lg">
                    <div class="text-2xl font-bold text-green-600">@(Model.ProcessHandlers?.Sum(tl => tl.Debit) ?? 0).ToString("C")</div>
                    <div class="text-sm text-slate-600">Total Debits</div>
                </div>
                <div class="text-center p-4 bg-slate-50 rounded-lg">
                    <div class="text-2xl font-bold text-red-600">@(Model.ProcessHandlers?.Sum(tl => tl.Credit) ?? 0).ToString("C")</div>
                    <div class="text-sm text-slate-600">Total Credits</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="p-6">
            @if (ViewBag.HasTransactions)
            {
                <div class="flex items-center justify-between">
                    <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })" 
                       class="inline-flex items-center px-4 py-2 border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Accounts
                    </a>
                    <div class="flex items-center space-x-3">
                        <a href="@Url.Action("AccountLedger", "Reports", new { area = "", accountId = Model.AccountId })" 
                           class="inline-flex items-center px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 text-sm font-medium rounded-lg transition-colors">
                            <i class="fas fa-eye mr-2"></i>
                            View Transactions
                        </a>
                        <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-500 text-sm font-medium rounded-lg cursor-not-allowed">
                            <i class="fas fa-trash mr-2"></i>
                            Cannot Delete
                        </span>
                    </div>
                </div>
            }
            else
            {
                <form asp-action="Delete" method="post" class="flex items-center justify-between">
                    <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })" 
                       class="inline-flex items-center px-4 py-2 border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </a>
                    <div class="flex items-center space-x-3">
                        <a href="@Url.Action("Details", "Accounts", new { area = "Admin", id = Model.AccountId })" 
                           class="inline-flex items-center px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 text-sm font-medium rounded-lg transition-colors">
                            <i class="fas fa-eye mr-2"></i>
                            View Details
                        </a>
                        <button type="submit" 
                                class="inline-flex items-center px-6 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm"
                                onclick="return confirm('Are you absolutely sure you want to delete this Account? This action cannot be undone.')">
                            <i class="fas fa-trash mr-2"></i>
                            Delete Account
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>

</div>
