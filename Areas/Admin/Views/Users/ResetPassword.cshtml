@using Cascade.Areas.Admin.Controllers
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

   <div class="max-w-8xl mx-auto py-2">

        <!-- Modern Header with Navigation -->
        <div class="mb-6">
            <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("Index", "Users", new { area = "Admin" })"
                        class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                        <i class="fa-solid fa-arrow-left text-slate-600"></i>
                    </a>
                    <div class="flex items-center space-x-3">
                        <div
                            class="w-12 h-12 bg-gradient-to-r from-cascadeBlue to-aquaMist rounded-xl flex items-center justify-center">
                            <i class="fa-solid fa-key text-white text-2xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-slate-900">Reset Password</h1>
                            <p class="text-slate-600">Set a new password for @Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reset Password Form -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
            <div class="p-6 border-b border-slate-200">
                <h2 class="text-lg font-bold text-slate-900">New Password</h2>
                <p class="text-slate-600 text-sm">Enter a new password for this User</p>
            </div>

            <form asp-action="ResetPassword" method="post" class="p-6">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- User Info Display -->
                    <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
                        <h3 class="text-sm font-medium text-slate-700 mb-2">User Information</h3>
                        <p class="text-slate-600 text-sm">Email: <strong>@Model.Email</strong></p>
                    </div>

                    <!-- New Password -->
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-slate-700 mb-2">New Password</label>
                        <input asp-for="NewPassword" type="password" 
                               class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cascadeBlue focus:border-transparent"
                               placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                        <p class="text-slate-500 text-sm mt-1">Password must be at least 6 characters long</p>
                    </div>

                    <!-- Confirm New Password -->
                    <div>
                        <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-slate-700 mb-2">Confirm New Password</label>
                        <input asp-for="ConfirmNewPassword" type="password" 
                               class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cascadeBlue focus:border-transparent"
                               placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Security Notice -->
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <i class="fas fa-shield-alt text-yellow-500 mr-2"></i>
                            <h3 class="text-sm font-medium text-yellow-800">Security Notice</h3>
                        </div>
                        <p class="text-yellow-700 text-sm mt-1">
                            The user will be able to log in immediately with this new password. 
                            Consider informing them through a secure channel.
                        </p>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-3 mt-8 pt-6 border-t border-slate-200">
                    <a href="@Url.Action("Index", "Users", new { area = "Admin" })" 
                       class="nav-link inline-flex items-center px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium rounded-lg transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm">
                        <i class="fas fa-key mr-2"></i>
                        Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
