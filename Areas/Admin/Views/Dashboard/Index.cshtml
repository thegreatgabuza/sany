@using Cascade.Areas.Admin.Controllers
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}


    <div class="max-w-8xl mx-auto py-2">

        <!-- Modern Header with Navigation -->
        <div class="mb-6">
            <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center space-x-4">
                    <a href="javascript:history.back()"
                        class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                        <i class="fa-solid fa-arrow-left text-slate-600"></i>
                    </a>
                    <div class="flex items-center space-x-3">
                        <div
                            class="w-12 h-12 bg-gradient-to-r from-cascadeBlue to-aquaMist rounded-xl flex items-center justify-center">
                            <i class="fa-solid fa-user-shield text-white text-2xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-slate-900">Admin Dashboard</h1>
                            <p class="text-slate-600">Welcome back! Here's an overview of @(Model.Hx7Tz3Data?.CompanyName ?? "Your Company")</p>
                        </div>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="@Url.Action("Create", "Users", new { area = "Admin" })" 
                       class="nav-link inline-flex items-center px-4 py-2 bg-cascadeBlue hover:bg-cascadeBlue/90 text-white text-sm font-medium rounded-lg transition-colors shadow-sm">
                        <i class="fas fa-user-plus mr-2"></i>
                        Add User
                    </a>
                    <a href="@Url.Action("Create", "Accounts", new { area = "Admin" })" 
                       class="nav-link inline-flex items-center px-4 py-2 bg-white hover:bg-gray-50 text-cascadeBlue border border-cascadeBlue text-sm font-medium rounded-lg transition-colors shadow-sm">
                        <i class="fas fa-plus-circle mr-2"></i>
                        Add Account
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Users -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-600 text-sm font-medium">Total Users</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.TotalUsers</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-users text-white"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="text-cascadeBlue hover:text-cascadeBlue/80 text-sm font-medium">
                        Manage Users →
                    </a>
                </div>
            </div>

            <!-- Total Accounts -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-600 text-sm font-medium">Chart of Accounts</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.TotalAccounts</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-chart-pie text-white"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Accounts", new { area = "Admin" })" class="text-cascadeBlue hover:text-cascadeBlue/80 text-sm font-medium">
                        Manage Accounts →
                    </a>
                </div>
            </div>

            <!-- Total Transactions -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-600 text-sm font-medium">Total Transactions</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.TotalTransactions</p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-cascadeBlue to-blue-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-exchange-alt text-white"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("GeneralJournal", "Reports", new { area = "" })" class="text-cascadeBlue hover:text-cascadeBlue/80 text-sm font-medium">
                        View Journal →
                    </a>
                </div>
            </div>

            <!-- Reports -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-600 text-sm font-medium">Financial Reports</p>
                        <p class="text-3xl font-bold text-slate-900"><i class="fas fa-chart-line"></i></p>
                    </div>
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-file-alt text-white"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Reports", new { area = "" })" class="text-cascadeBlue hover:text-cascadeBlue/80 text-sm font-medium">
                        View Reports →
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Recent Transactions Table -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-slate-900">Recent Transactions</h2>
                    <a href="@Url.Action("GeneralJournal", "Reports", new { area = "" })" class="text-cascadeBlue hover:text-cascadeBlue/80 text-sm font-medium">
                        View All →
                    </a>
                </div>
                @if (Model.RecentTransactions.Any())
                {
                    <div class="space-y-3">
                        @foreach (var Pz7Vm5Protocol in Model.RecentTransactions.Take(5))
                        {
                            <div class="p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300">
                                <div class="flex items-center justify-between mb-2">
                                    <p class="text-slate-900 font-medium">@Pz7Vm5Protocol.Description</p>
                                    <span class="text-cascadeBlue text-sm font-medium">
                                        @Pz7Vm5Protocol.ProcessHandlers.Sum(tl => tl.Debit).ToString("C")
                                    </span>
                                </div>
                                <div class="flex items-center justify-between text-sm">
                                    <p class="text-slate-600">@Pz7Vm5Protocol.TransactionDate.ToString("MMM dd, yyyy")</p>
                                    @if (!string.IsNullOrEmpty(Pz7Vm5Protocol.ReferenceNo))
                                    {
                                        <p class="text-slate-500">Ref: @Pz7Vm5Protocol.ReferenceNo</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-inbox text-slate-400 text-4xl mb-4"></i>
                        <p class="text-slate-600">No transactions yet</p>
                    </div>
                }
            </div>

            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
                <h2 class="text-xl font-bold text-slate-900 mb-6">Quick Actions</h2>
                <div class="space-y-4">
                    <a href="@Url.Action("Create", "Users", new { area = "Admin" })" 
                       class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                        <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-user-plus text-white"></i>
                        </div>
                        <div>
                            <p class="text-slate-900 font-medium">Add New User</p>
                            <p class="text-slate-600 text-sm">Create a new user account</p>
                        </div>
                        <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-cascadeBlue transition-colors"></i>
                    </a>

                    <a href="@Url.Action("Create", "Accounts", new { area = "Admin" })" 
                       class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                        <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-plus-circle text-white"></i>
                        </div>
                        <div>
                            <p class="text-slate-900 font-medium">Add Qw8Rt5Entity</p>
                            <p class="text-slate-600 text-sm">Expand chart of accounts</p>
                        </div>
                        <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-cascadeBlue transition-colors"></i>
                    </a>

                    <a href="@Url.Action("TrialBalance", "Reports", new { area = "" })" 
                       class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                        <div class="w-10 h-10 bg-gradient-to-br from-cascadeBlue to-blue-600 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-balance-scale text-white"></i>
                        </div>
                        <div>
                            <p class="text-slate-900 font-medium">Trial Balance</p>
                            <p class="text-slate-600 text-sm">View current balances</p>
                        </div>
                        <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-cascadeBlue transition-colors"></i>
                    </a>

                    <a href="@Url.Action("IncomeStatement", "Reports", new { area = "" })" 
                       class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                        <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                        <div>
                            <p class="text-slate-900 font-medium">Income Statement</p>
                            <p class="text-slate-600 text-sm">Revenue vs expenses</p>
                        </div>
                        <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-cascadeBlue transition-colors"></i>
                    </a>

                    <a href="@Url.Action("Index", "Settings", new { area = "Admin" })" 
                       class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                        <div class="w-10 h-10 bg-gradient-to-br from-gray-500 to-slate-600 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-cog text-white"></i>
                        </div>
                        <div>
                            <p class="text-slate-900 font-medium">Company Settings</p>
                            <p class="text-slate-600 text-sm">Manage Company & financial year</p>
                        </div>
                        <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-cascadeBlue transition-colors"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

<style>
    /* Clean styling consistent with Accountant dashboard */
</style>
