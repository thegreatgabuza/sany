@model Hx7Tz3Data
@{
    ViewData["Title"] = "Company Settings";
}

<div class="max-w-8xl mx-auto py-2">
    <!-- Modern Header with Navigation -->
    <div class="mb-6">
        <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <div class="flex items-center space-x-4">
                <a href="javascript:history.back()"
                    class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                    <i class="fa-solid fa-arrow-left text-slate-600"></i>
                </a>
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-gradient-to-r from-cascadeBlue to-aquaMist rounded-xl flex items-center justify-center">
                        <i class="fas fa-cog text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">Company Settings</h1>
                        <p class="text-slate-600">Manage your Company information and financial year configuration</p>
                    </div>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                <a href="@Url.Action("Edit", "Settings", new { area = "Admin" })" 
                   class="inline-flex items-center px-4 py-2 bg-cascadeBlue hover:bg-cascadeBlue/90 text-white rounded-lg transition-colors">
                    <i class="fas fa-edit mr-2"></i>Edit Settings
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-check-circle text-green-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">@TempData["Success"]</p>
                </div>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Hx7Tz3Data Information -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <h2 class="text-xl font-bold text-slate-900 mb-6">
                <i class="fas fa-building mr-2 text-cascadeBlue"></i>Company Information
            </h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-slate-700 font-medium mb-2">Company Name</label>
                    <div class="p-3 bg-slate-50 border border-slate-200 rounded-lg">
                        <span class="text-slate-900">@Model.CompanyName</span>
                    </div>
                </div>

                <div>
                    <label class="block text-slate-700 font-medium mb-2">Address</label>
                    <div class="p-3 bg-slate-50 border border-slate-200 rounded-lg">
                        <span class="text-slate-900">@(string.IsNullOrEmpty(Model.Address) ? "Not specified" : Model.Address)</span>
                    </div>
                </div>

                <div>
                    <label class="block text-slate-700 font-medium mb-2">Contact Information</label>
                    <div class="p-3 bg-slate-50 border border-slate-200 rounded-lg">
                        <span class="text-slate-900">@(string.IsNullOrEmpty(Model.ContactInfo) ? "Not specified" : Model.ContactInfo)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Year Configuration -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <h2 class="text-xl font-bold text-slate-900 mb-6">
                <i class="fas fa-calendar-alt mr-2 text-cascadeBlue"></i>Financial Year Configuration
            </h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-slate-700 font-medium mb-2">Financial Year End Date</label>
                    <div class="p-3 bg-slate-50 border border-slate-200 rounded-lg">
                        <span class="text-slate-900">
                            @Model.FinancialYearEndDay @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.FinancialYearEndMonth)
                        </span>
                    </div>
                </div>

                <div>
                    <label class="block text-slate-700 font-medium mb-2">Current Financial Year</label>
                    <div class="p-3 bg-blue-50 border border-blue-200 rounded-lg">
                        <span class="text-blue-900 font-medium">@Model.GetCurrentFinancialYear()</span>
                    </div>
                </div>

                <div>
                    <label class="block text-slate-700 font-medium mb-2">Current Financial Year Period</label>
                    <div class="p-3 bg-blue-50 border border-blue-200 rounded-lg">
                        @{
                            var today = DateTime.Today;
                            var currentFYEnd = Model.GetFinancialYearEnd(Model.GetCurrentFinancialYear());
                            var fyStart = currentFYEnd.AddYears(-1).AddDays(1);
                        }
                        <span class="text-blue-900">
                            @fyStart.ToString("MMM dd, yyyy") - @currentFYEnd.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Panel -->
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mt-8">
        <div class="flex items-start">
            <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
            <div>
                <h3 class="text-blue-800 font-bold mb-2">About Financial Year Configuration</h3>
                <div class="text-blue-700 space-y-2">
                    <p>• The financial year end date determines when your Company's accounting period ends.</p>
                    <p>• All financial reports will use this configuration to calculate default date ranges.</p>
                    <p>• Income statements and cash journals will show the current financial year period by default.</p>
                    <p>• Balance sheets and trial balances will show the financial year end date by default.</p>
                    <p>• Common financial year ends: March 31st (many countries), December 31st (calendar year), June 30th (government/education).</p>
                </div>
            </div>
        </div>
    </div>
</div>
