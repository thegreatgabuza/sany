@page
@model NotFoundModel
@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto text-center">
        <div class="mb-8">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-red-100 rounded-full mb-6">
                <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
            </div>
            <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Page Not Found</h2>
            <p class="text-gray-600 mb-8">
                Sorry, the page you're looking for doesn't exist or has been moved.
            </p>
        </div>
        
        <div class="space-y-4">
            <a href="/" class="inline-block bg-mentor-gold text-white px-6 py-3 rounded-lg font-medium hover:bg-yellow-600 transition-colors">
                <i class="fas fa-home mr-2"></i>
                Go to Homepage
            </a>
            
            <div class="text-center">
                <a href="javascript:history.back()" class="text-mentor-gold hover:text-yellow-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Go Back
                </a>
            </div>
        </div>
        
        <div class="mt-12 text-sm text-gray-500">
            <p>If you believe this is an error, please contact our support team.</p>
            <p class="mt-2">
                <a href="mailto:support@singawe.com" class="text-mentor-gold hover:text-yellow-600">
                    support@singawe.com
                </a>
            </p>
        </div>
    </div>
</div>

<style>
    .container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .bg-mentor-gold {
        background-color: #d4af37;
    }
    
    .text-mentor-gold {
        color: #d4af37;
    }
    
    .hover\:bg-yellow-600:hover {
        background-color: #ca8a04;
    }
    
    .hover\:text-yellow-600:hover {
        color: #ca8a04;
    }
</style>
