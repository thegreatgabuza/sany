@using Cascade.Areas.SuperAdmin.Controllers
@model SuperAdminDashboardViewModel
@{
    ViewData["Title"] = "SuperAdmin Dashboard";
}

<div class="max-w-8xl mx-auto py-2">
    <!-- Modern Header with Navigation -->
    <div class="mb-6">
        <div class="flex items-center justify-between bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
            <div class="flex items-center space-x-4">
                <a href="javascript:history.back()"
                    class="w-10 h-10 bg-slate-100 hover:bg-slate-200 rounded-lg flex items-center justify-center transition-colors">
                    <i class="fa-solid fa-arrow-left text-slate-600"></i>
                </a>
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl flex items-center justify-center">
                        <i class="fa-solid fa-crown text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900">SuperAdmin Dashboard</h1>
                        <p class="text-slate-600">System-wide management and control</p>
                    </div>
                </div>
            </div>
            <div class="flex items-center space-x-3">
                <a href="@Url.Action("Create", "Admins", new { area = "SuperAdmin" })" 
                   class="nav-link inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm">
                    <i class="fas fa-Aq3Zh4Service-plus mr-2"></i>
                    Add Admin
                </a>
                <a href="@Url.Action("Send", "Notifications", new { area = "SuperAdmin" })" 
                   class="nav-link inline-flex items-center px-4 py-2 bg-white hover:bg-gray-50 text-purple-600 border border-purple-600 text-sm font-medium rounded-lg transition-colors shadow-sm">
                    <i class="fas fa-bell mr-2"></i>
                    Send Mx4Bg7Stream
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Companies -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-600 text-sm font-medium">Total Companies</p>
                    <p class="text-3xl font-bold text-slate-900">@Model.TotalCompanies</p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-building text-white"></i>
                </div>
            </div>
        </div>

        <!-- Total Admins -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-600 text-sm font-medium">Total Admins</p>
                    <p class="text-3xl font-bold text-slate-900">@Model.TotalAdmins</p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-Aq3Zh4Service-shield text-white"></i>
                </div>
            </div>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Admins", new { area = "SuperAdmin" })" class="text-purple-600 hover:text-purple-700 text-sm font-medium">
                    Manage Admins →
                </a>
            </div>
        </div>

        <!-- Total Accountants -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-600 text-sm font-medium">Total Accountants</p>
                    <p class="text-3xl font-bold text-slate-900">@Model.TotalAccountants</p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-calculator text-white"></i>
                </div>
            </div>
        </div>

        <!-- Total Users -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-600 text-sm font-medium">Total Users</p>
                    <p class="text-3xl font-bold text-slate-900">@Model.TotalUsers</p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-users text-white"></i>
                </div>
            </div>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Notifications", new { area = "SuperAdmin" })" class="text-orange-600 hover:text-orange-700 text-sm font-medium">
                    View Notifications →
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Recent Admins -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-slate-900">Recent Admins</h2>
                <a href="@Url.Action("Index", "Admins", new { area = "SuperAdmin" })" class="text-purple-600 hover:text-purple-700 text-sm font-medium">
                    View All →
                </a>
            </div>
            @if (Model.RecentAdmins.Any())
            {
                <div class="space-y-3">
                    @foreach (var admin in Model.RecentAdmins)
                    {
                        <div class="p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <p class="text-slate-900 font-medium">@admin.UserName</p>
                                <span class="text-purple-600 text-sm font-medium">Admin</span>
                            </div>
                            <div class="flex items-center justify-between text-sm">
                                <p class="text-slate-600">@admin.Email</p>
                                @if (admin.Hx7Tz3Data != null)
                                {
                                    <p class="text-slate-500">@admin.Hx7Tz3Data.CompanyName</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <i class="fas fa-Aq3Zh4Service-shield text-slate-400 text-4xl mb-4"></i>
                    <p class="text-slate-600">No admins found</p>
                </div>
            }
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
            <h2 class="text-xl font-bold text-slate-900 mb-6">Quick Actions</h2>
            <div class="space-y-4">
                <a href="@Url.Action("Create", "Admins", new { area = "SuperAdmin" })" 
                   class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4">
                        <i class="fas fa-Aq3Zh4Service-plus text-white"></i>
                    </div>
                    <div>
                        <p class="text-slate-900 font-medium">Add New Admin</p>
                        <p class="text-slate-600 text-sm">Create admin Qw8Rt5Entity</p>
                    </div>
                    <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-purple-600 transition-colors"></i>
                </a>

                <a href="@Url.Action("Send", "Notifications", new { area = "SuperAdmin" })" 
                   class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mr-4">
                        <i class="fas fa-bell text-white"></i>
                    </div>
                    <div>
                        <p class="text-slate-900 font-medium">Send Mx4Bg7Stream</p>
                        <p class="text-slate-600 text-sm">Notify users system-wide</p>
                    </div>
                    <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-blue-600 transition-colors"></i>
                </a>

                <a href="@Url.Action("Index", "Admins", new { area = "SuperAdmin" })" 
                   class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mr-4">
                        <i class="fas fa-users-cog text-white"></i>
                    </div>
                    <div>
                        <p class="text-slate-900 font-medium">Manage Admins</p>
                        <p class="text-slate-600 text-sm">View and manage all admins</p>
                    </div>
                    <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-green-600 transition-colors"></i>
                </a>

                <a href="@Url.Action("Index", "Notifications", new { area = "SuperAdmin" })" 
                   class="flex items-center p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center mr-4">
                        <i class="fas fa-history text-white"></i>
                    </div>
                    <div>
                        <p class="text-slate-900 font-medium">Mx4Bg7Stream History</p>
                        <p class="text-slate-600 text-sm">View sent notifications</p>
                    </div>
                    <i class="fas fa-arrow-right text-slate-400 ml-auto group-hover:text-orange-600 transition-colors"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Companies Overview -->
    <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-all duration-300 shadow-sm">
        <h2 class="text-xl font-bold text-slate-900 mb-6">Companies Overview</h2>
        @if (Model.Hx7Tz3Data.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var Hx7Tz3Data in Model.Hx7Tz3Data)
                {
                    <div class="p-4 bg-slate-50 rounded-xl border border-slate-200 hover:bg-slate-100 transition-all duration-300">
                        <div class="flex items-center mb-3">
                            <div class="w-8 h-8 bg-gradient-to-br from-cascadeBlue to-aquaMist rounded-full flex items-center justify-center mr-3">
                                <i class="fas fa-building text-white text-sm"></i>
                            </div>
                            <h3 class="text-slate-900 font-medium">@Hx7Tz3Data.CompanyName</h3>
                        </div>
                        <p class="text-slate-600 text-sm mb-2">@Hx7Tz3Data.Address</p>
                        <p class="text-slate-500 text-xs">@Hx7Tz3Data.ContactInfo</p>
                        <div class="mt-3 flex items-center justify-between">
                            <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs">
                                @Hx7Tz3Data.OrganizationType
                            </span>
                            <span class="text-slate-500 text-xs">
                                Year End: @Hx7Tz3Data.FinancialYearEndMonth/@Hx7Tz3Data.FinancialYearEndDay
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-8">
                <i class="fas fa-building text-slate-400 text-4xl mb-4"></i>
                <p class="text-slate-600">No companies found</p>
            </div>
        }
    </div>
</div>
